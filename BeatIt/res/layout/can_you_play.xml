<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/description_layout"
        android:layout_alignLeft="@+id/description_layout"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/description_layout"
        android:layout_alignStart="@+id/description_layout"
        android:layout_marginRight="22dp"
        android:layout_marginTop="15dp" >

        <ImageView
            android:id="@+id/imageView_Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="22dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/logo_description"
            android:src="@drawable/ic_can_you_play" />

        <TextView
            android:id="@+id/textView_Challenge_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/imageView_Logo"
            android:layout_toRightOf="@+id/imageView_Logo"
            android:text="@string/can_you_play"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/can_you_play"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/description_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_layout"
        android:layout_alignStart="@+id/info_layout"
        android:layout_below="@+id/title_layout"
        android:layout_marginRight="22dp"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView_Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_Description_Value_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView_Description"
            android:text="@string/can_you_play_description_2"
            android:textColor="@color/gris_challenge_description"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/description_layout"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/textView_To_Beat_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_To_Beat"
            android:layout_alignStart="@+id/textView_To_Beat"
            android:layout_below="@+id/textView_To_Beat"
            android:text="@string/points_value"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gris_challenge_values"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_Duration_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_Duration"
            android:layout_alignStart="@+id/textView_Duration"
            android:layout_below="@+id/textView_Duration"
            android:text="@string/duration_value"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gris_challenge_values"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_Start_Time_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_Start_Time"
            android:layout_alignStart="@+id/textView_Start_Time"
            android:layout_below="@+id/textView_Start_Time"
            android:text="@string/duration_value"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gris_challenge_values"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_Start_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/start_time"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_Duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_Left_Time"
            android:layout_alignParentLeft="true"
            android:layout_alignStart="@+id/textView_Start_Time"
            android:layout_below="@+id/textView_Start_Time_Value"
            android:layout_marginTop="15dp"
            android:text="@string/duration"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_To_Beat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_Duration"
            android:layout_alignParentLeft="true"
            android:layout_alignStart="@+id/textView_Duration"
            android:layout_below="@+id/textView_Duration_Value"
            android:layout_marginTop="15dp"
            android:text="@string/to_beat"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/title_layout"
        android:layout_alignLeft="@+id/info_layout"
        android:layout_alignRight="@+id/description_layout"
        android:layout_alignStart="@+id/info_layout"
        android:layout_below="@+id/info_layout"
        android:layout_marginTop="15dp" >

        <ImageButton
            android:id="@+id/select_contact_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/can_you_play"
            android:gravity="center"
            android:src="@drawable/contacts"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/send_SMS_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/select_contact_button"
            android:layout_alignBottom="@+id/select_contact_button"
            android:layout_alignEnd="@+id/select_contact_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/select_contact_button"
            android:background="@color/can_you_play"
            android:gravity="center"
            android:src="@drawable/sms"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/done_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/facebook_post_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/facebook_post_button"
            android:layout_toRightOf="@+id/select_contact_button"
            android:background="@color/can_you_play"
            android:src="@drawable/yes_button" />

        <ImageButton
            android:id="@+id/facebook_post_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/can_you_play"
            android:gravity="center"
            android:src="@drawable/facebook_icon" />

    </RelativeLayout>

</RelativeLayout>